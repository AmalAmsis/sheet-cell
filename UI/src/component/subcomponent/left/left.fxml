<ScrollPane prefHeight="533.0" prefWidth="235.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="component.subcomponent.left.LeftController">
    <content>
        <VBox alignment="TOP_CENTER" prefHeight="532.0" prefWidth="207.0">
            <children>
                <Label alignment="CENTER" contentDisplay="CENTER" stylesheets="@left.css" text="Command" textAlignment="CENTER" VBox.vgrow="ALWAYS">
                    <font>
                        <Font name="Blackadder ITC" size="22.0" />
                    </font></Label>
                <Accordion prefHeight="229.0" prefWidth="207.0">
                    <panes>
                        <TitledPane animated="false" prefHeight="199.0" prefWidth="191.0" stylesheets="@left.css" text="Custom Sort">
                            <content>
                                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="191.0" prefWidth="189.0">
                                    <children>
                                        <TextField fx:id="sortToTextField" layoutX="94.0" layoutY="28.0" prefHeight="26.0" prefWidth="38.0" promptText="to" styleClass="sr-label" stylesheets="@left.css" />
                                        <TextField fx:id="sortFromTextField" layoutX="44.0" layoutY="28.0" prefHeight="26.0" prefWidth="40.0" promptText="from" styleClass="sr-label" stylesheets="@left.css" />
                                        <Label layoutX="84.0" layoutY="23.0" prefHeight="36.0" prefWidth="7.0" text="-">
                                            <font>
                                                <Font size="25.0" />
                                            </font>
                                        </Label>
                                        <Button fx:id="sortButton" layoutX="84.0" layoutY="123.0" mnemonicParsing="false" onAction="#ClickMeSortButton" stylesheets="@left.css" text="Sort" />
                                        <Label layoutX="28.0" layoutY="5.0" text="Enter range for sorting:" />
                                        <MenuButton fx:id="selectColumnsToSortByMenu" layoutX="4.0" layoutY="62.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="170.0" text="Select columns to sort by:" />
                                        <Button fx:id="sortHelpButton" layoutX="161.0" mnemonicParsing="false" prefHeight="0.0" prefWidth="0.0" text="?">
                                            <font>
                                                <Font size="8.0" />
                                            </font>
                                            <tooltip>
                                                <Tooltip text="To sort the data:\n1. Enter the range in the 'from' and 'to' fields (e.g., A1 to C5).\n2. Select the columns to sort by using the dropdown.\n3. Specify the sorting priority by selecting multiple columns.\n   - The first column selected will have the highest priority.\n   - The second column will be sorted within the first, and so on.\n4. Click 'Sort' to apply the sorting." />
                                            </tooltip>
                                        </Button>
                                        <FlowPane fx:id="selectedSortColumnsFlowPane" hgap="5" layoutX="23.0" layoutY="88.0" prefHeight="31.0" prefWidth="132.0" vgap="5" />
                                        <Button fx:id="resetSortButton" layoutX="132.0" layoutY="123.0" mnemonicParsing="false" onAction="#clickMeResetSortButton" stylesheets="@left.css" text="Reset" />
                                    </children>
                                </AnchorPane>
                            </content>
                     <font>
                        <Font name="Bell MT Italic" size="14.0" />
                     </font>
                        </TitledPane>
                        <TitledPane animated="false" layoutX="10.0" layoutY="10.0" prefHeight="199.0" prefWidth="191.0" stylesheets="@left.css" text="Custom Filter">
                            <content>
                                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="142.0" prefWidth="205.0">
                                    <children>
                                        <TextField fx:id="filterToTextField" layoutX="105.0" layoutY="28.0" prefHeight="26.0" prefWidth="38.0" promptText="to" styleClass="sr-label" stylesheets="@left.css" />
                                        <TextField fx:id="filterFromTextField" layoutX="42.0" layoutY="28.0" prefHeight="26.0" prefWidth="40.0" promptText="from" styleClass="sr-label" stylesheets="@left.css" />
                                        <Label layoutX="87.0" layoutY="23.0" prefHeight="36.0" prefWidth="7.0" text="-">
                                            <font>
                                                <Font size="25.0" />
                                            </font>
                                        </Label>
                                        <Button fx:id="filterButton" layoutX="71.0" layoutY="114.0" mnemonicParsing="false" onAction="#ClickMeFilterButton" stylesheets="@left.css" text="Filter" />
                                        <Label layoutX="29.0" layoutY="4.0" text="Enter range for filtering:" />
                                        <Button fx:id="filterHelpButton" layoutX="166.0" layoutY="3.0" mnemonicParsing="false" prefHeight="0.0" prefWidth="0.0" text="?">
                                            <font>
                                                <Font size="8.0" />
                                            </font>
                                            <tooltip>
                                                <Tooltip text="To sort the data:\n1. Enter the range in the 'from' and 'to' fields (e.g., A1 to C5).\n2. Select the columns to sort by using the dropdown.\n3. Specify the sorting priority by selecting multiple columns.\n   - The first column selected will have the highest priority.\n   - The second column will be sorted within the first, and so on.\n4. Click 'Sort' to apply the sorting." />
                                            </tooltip>
                                        </Button>
                                        <FlowPane fx:id="filterDataFlowPane" hgap="5" layoutX="7.0" layoutY="88.0" prefHeight="25.0" prefWidth="171.0" vgap="5" />
                                        <MenuButton fx:id="selectColumnsToFilterByMenu" layoutX="1.0" layoutY="63.0" mnemonicParsing="false" prefHeight="27.0" prefWidth="182.0" text="Select columns to filter by:" />
                                        <Button fx:id="resetFilterButton" layoutX="132.0" layoutY="114.0" mnemonicParsing="false" onAction="#clickMeResetFilterButton" stylesheets="@left.css" text="Reset" />
                                    </children>
                                </AnchorPane>
                            </content>
                     <font>
                        <Font name="Bell MT Italic" size="14.0" />
                     </font>
                        </TitledPane>
                    </panes>
                </Accordion>
                <Label text="Range">
               <font>
                  <Font name="Blackadder ITC" size="22.0" />
               </font></Label>
                <Accordion prefHeight="222.0" prefWidth="219.0">
                    <panes>
                        <TitledPane animated="false" stylesheets="@left.css" text="add new range">
                            <content>
                                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                                    <children>
                                        <TextField fx:id="newRangeNameTextField" layoutX="41.0" layoutY="14.0" prefHeight="26.0" prefWidth="102.0" promptText="new range name" styleClass="sr-label" stylesheets="@left.css" />
                                        <TextField fx:id="toTextField" layoutX="101.0" layoutY="50.0" prefHeight="26.0" prefWidth="38.0" promptText="to" styleClass="sr-label" stylesheets="@left.css" />
                                        <TextField fx:id="fromTextField" layoutX="44.0" layoutY="50.0" prefHeight="26.0" prefWidth="40.0" promptText="from" styleClass="sr-label" stylesheets="@left.css" />
                                        <Label layoutX="87.0" layoutY="45.0" prefHeight="36.0" prefWidth="7.0" text="-">
                                            <font>
                                                <Font size="25.0" />
                                            </font>
                                        </Label>
                                        <Button fx:id="addNewRangeButton" layoutX="72.0" layoutY="81.0" mnemonicParsing="false" onAction="#ClickMeAddNewRangeButton" stylesheets="@left.css" text="add" />
                                    </children>
                                </AnchorPane>
                            </content>
                     <font>
                        <Font name="Bell MT Italic" size="14.0" />
                     </font>
                        </TitledPane>
                        <TitledPane animated="false" stylesheets="@left.css" text="show range">
                            <content>
                                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                                    <children>
                                        <ChoiceBox fx:id="showRangeChoiceBox" layoutX="35.0" layoutY="22.0" prefHeight="26.0" prefWidth="114.0" />
                                        <Button fx:id="showRangeButton" layoutX="70.0" layoutY="66.0" mnemonicParsing="false" onAction="#ClickMeShowRange" stylesheets="@left.css" text="show" />
                                    </children>
                                </AnchorPane>
                            </content>
                     <font>
                        <Font name="Bell MT Italic" size="14.0" />
                     </font>
                        </TitledPane>
                        <TitledPane animated="false" stylesheets="@left.css" text="delete range">
                            <content>
                                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                                    <children>
                                        <ChoiceBox fx:id="removeRangeChoiceBox" layoutX="35.0" layoutY="25.0" prefHeight="26.0" prefWidth="121.0" />
                                        <Button fx:id="removeRangeButton" layoutX="68.0" layoutY="72.0" mnemonicParsing="false" onAction="#ClickMeRemoveRange" stylesheets="@left.css" text="remove" />
                                    </children>
                                </AnchorPane>
                            </content>
                     <font>
                        <Font name="Bell MT Italic" size="14.0" />
                     </font>
                        </TitledPane>
                    </panes>
                </Accordion>
            </children>
        </VBox>
    </content>
</ScrollPane>
